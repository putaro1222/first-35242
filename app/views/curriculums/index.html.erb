<h1>トップページ</h1>

<ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, user_path(current_user), class: "user-nickname" %></li>
        <li><%= link_to '退行', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to '登校', new_user_session_path, class: "login" %></li>
        <li><%= link_to '入学', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
</ul>
